<p id="notice"><%= notice %></p>

<h1>Artículos</h1>

<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= link_to ' Mostrar ', article %></td>
        <td><%= link_to ' Editar ', edit_article_path(article) %></td>
        <td><%= link_to ' Eliminar ', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Artículo', new_article_path %>
